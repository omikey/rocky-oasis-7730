<!DOCTYPE html>
<html ng-app="app">
<head>
  <title>EZTOEIC</title>
  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= javascript_include_tag "application", controller_name %>
</head>
<body style="margin:0; background-color: #262626" ng-controller="MasterCtrl" chrome="<%= request.env['HTTP_USER_AGENT'].downcase.include? 'chrome' %>">
<table class="backdrop" style="background-size: 100% 13.2em; background-repeat: no-repeat; width:100%; border-spacing: 0px;">
  <tr>
    <td></td>
    <td style="border:0; height:140px; width:975px" colspan="6">
      <img src="<%= image_url('logo.png') %>" style="position:relative;" />
    </td>
    <td colspan="3">
      <div ng-repeat="option in ['<%= @login ? "Sign Out" : "Register" %>','<%= @login ? @login["login"] : "Sign-in" %>']"
           ng-style="{'margin-left':($first ? '4em' : '2em'), 'text-align':'center'}"
           class="logins"
           id="logger{{$index+1}}"
           ng-click="<%= @login ? 'regLog($index+3)' : 'regLog($index+1)' %>">
        {{option}}
      </div>
    </td>
  </tr>
  <tr>
    <td></td>
    <td class='tabs'
        ng-style="{'background-color':($first ? 'gray' : '#262626'),visibility:($odd ? 'hidden' : 'visible'), width: ($odd ? '.5em' : '8em')}"
        ng-repeat="tab in ['Dashboard','1', 'Lessons','2','Training','3','Test','4','Community']"
        ng-click="focusTab($event)"
        name="{{tab}}">
      {{tab}}
    </td>
    <td></td>
  </tr>
  <tr>
    <td></td>
    <td colspan="9" style="background-color: white;">
      <table style="width:100%; height:100%; border-spacing: 0px">
        <tr>
          <td style="border: solid white 10px; width:960px; height:1000px; background-color: #ffffff; font-size: 1.3em; font-family: 'Arial';">
            <%= yield %>
          </td>
        </tr>
      </table>
    </td>
    <td></td>
  </tr>
</table>
</body>
</html>