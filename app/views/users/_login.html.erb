<div id="login" style="display: none">
  <%= form_for(@user, remote: true, multipart: true, authenticity_token: true, action: 'login') do |f| %>
      <% if @user.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@user.errors.count, "error") %> prohibited you from loggin in:</h2>

            <ul>
              <% @user.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
              <% end %>
            </ul>
          </div>
      <% end %>
      <div class="field">
        <%= f.label :login %><br>
        <%= f.text_field :login %>
      </div>
      <div class="field">
        <%= f.label :password %><br>
        <%= f.password_field :password %>
      </div>
      <div class="actions" style="display: none;">
        <%= f.submit %>
      </div>
  <% end %>
</div>